<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_margin="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_user_portrait"
                android:layout_width="70dp"
                android:layout_height="70dp"/>

        <LinearLayout
                android:layout_margin="8dp"
            android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                    tools:text="123456"
                    android:id="@+id/weibo_detail_page_username"
                    android:textSize="24sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_margin="4dp"
                        android:id="@+id/weibo_detail_page_time"
                        tools:text="12345"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:layout_margin="4dp"
                        android:id="@+id/weibo_detail_page_source"
                        tools:text="小米9"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:textSize="18sp"
                tools:text="123456789"
                android:id="@+id/weibo_detail_page_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <include layout="@layout/pictures_recycler_view" android:id="@+id/weibo_detail_page_pictures"/>

        <LinearLayout
                android:layout_margin="8dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:id="@+id/weibo_detail_page_transmit"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <ImageView
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_transmit"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>

                <TextView
                        android:layout_marginStart="4dp"
                        tools:text="20"
                        android:id="@+id/weibo_detail_page_transmit_content"
                        android:textSize="16sp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/weibo_detail_page_thumbs_up"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <ImageView
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_thumbs_up"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>

                <TextView
                        android:layout_marginStart="4dp"
                        tools:text="20"
                        android:id="@+id/weibo_detail_page_thumbs_up_content"
                        android:textSize="16sp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>