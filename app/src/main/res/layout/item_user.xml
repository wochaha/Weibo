<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
            android:scaleType="centerCrop"
            android:src="@drawable/ic_user_portrait"
            android:layout_margin="8dp"
            android:id="@+id/user_avatar"
            android:layout_width="180px"
            android:layout_height="180px"/>

    <LinearLayout
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView tools:text="孔庆东"
                  android:ellipsize="end"
                  android:maxLines="1"
                  android:textSize="18sp"
                  android:id="@+id/list_user_nick_name"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>

        <TextView tools:text="北京大学教授"
                  android:textSize="14sp"
                  android:ellipsize="end"
                  android:maxLines="1"
                  android:id="@+id/verified_reason"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>

        <TextView tools:text="真能瞎白活"
                  android:textSize="14sp"
                  android:ellipsize="end"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/recent_status"
                  android:maxLines="1"/>
    </LinearLayout>

</LinearLayout>